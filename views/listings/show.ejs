<% layout("layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-md-6 offset-md-2 col-12 offset-0">
        <h3>
          <%= listing.title %>
        </h3>
      </div>
      <div class="card col-md-6 offset-md-2 col-12 offset-0">
        <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <% if(listing.owner) { %>
              <i>
                <%=listing.owner.username %>
              </i>
              <br>
              <% } %>
                <%= listing.description %> <br>
                  <b>Price:</b>
                  &#8377;<%= listing.price.toLocaleString("en-IN") %>
                    <br>
                    <b>Country:</b>
                    <%=listing.country %>
                      <br>
                      <b>Location:</b>
                      <%=listing.location %>

          </p>
        </div>
      </div>
      <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)) { %>
        <div class="btns col-md-5 offset-md-2 col-12 offset-0">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit this Listing</a>
          <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-danger">Delete this listing</button>
          </form>
          <hr>
        </div>
        <% } %>
      <% if (listing.geometry && listing.geometry.coordinates && listing.geometry.coordinates.length === 2) { %>
        <div id="map" class="col-md-6 offset-md-2 col-12 offset-0" style="height: 400px;"></div>
        <script>
          const listingGeometry = <%- JSON.stringify(listing.geometry) %>;
          const listingTitle = "<%= listing.title %>";
          const listingLocation = "<%= listing.location %>";
        </script>
      <% } else { %>
        <div id="map" class="col-md-6 offset-md-2 col-12 offset-0" style="height: 400px;">
        <p>Map not available for this listing (missing or invalid location data).</p></div>
      <% } %>

      
          <% if(!(currUser && listing.owner && currUser._id.equals(listing.owner._id))) { %>
            <div class="card col-md-6 offset-md-2 col-12 offset-0">
              <hr>
              <h4>Leave a Review</h4>
              <form action="/listings/<%=listing._id %>/reviews" method="post" class="needs-validation" novalidate>
                <div class="mb-3 mt-2">
                  <label for="rating" class="form-label">Rating</label>
                  <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" checked />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3 mt-2">
                  <label for="comments" class="form-label">Give Comments</label>
                  <textarea name="review[comment]" class="form-control" id="comments" cols="80" row="10"
                    required></textarea>
                  <div class="invalid-feedback">Comment cannot be empty</div>
                </div>
                <div class="mb-3 mt-2">
                  <button class="btn btn-outline-dark">Submit</button>
                </div>
              </form>
            </div>
            <% } %>
              <div class="card col-md-6 offset-md-2 col-12 offset-0">
                <hr>
                <h4>All reviews: </h4>
                <div class="row ">
                  <% if(listing.reviews.length==0) {%>
                    <p>No reviews yet</p>
                    <% } %>
                  <% for(review of listing.reviews){ %>
                    <div class="card review-card col-md-5 col-12 ms-md-2 mb-3">
                      <div class="card-body">
                        <h5 class="card-title mt-3"><strong>Rating:</strong>
                         <% for(let i=0;i<review.rating;i++){ %>
                          <i class="fa-solid fa-star"></i>
                          <% } %></h5>
                        <p class="card-text review-comment-box">
                          <%=review.comment%>
                        </p>
                        <% if(currUser && review.author.equals(currUser._id)) {%>
                        <div class="d-flex justify-content-between align-items-center">
                          <i>@<%= review.author.username %></i>
                          <form class="mb-3" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE"
                            method="post">
                            <button class="btn btn-sm btn-danger">Delete</button>
                          </form>
                        </div>
                        <% } %>
                        
                      </div>
                    </div>
                    <% } %>
                </div>
              </div>
    </div>
  </body>